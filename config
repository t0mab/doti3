        colors {
                # background         #101010
                # statusline         #b2b2b2
                # # class              border  backgr  text  indicator
                # focused_workspace  #FFFFFF #101010 #f7f7f7
                # active_workspace   #1c1c1c #121212 #f7f7f7 #444444
                # inactive_workspace #080808 #101010 #262626 #222222
                # urgent_workspace   #e4e4e4 #121212 #e4e4e4
                statusline         $white
                background         $transparent
                separator          $transparent

        #                          BORDER       BACKGROUND   TEXT
                focused_workspace  $transparent $transparent #40FF00
                inactive_workspace $transparent $transparent $white
                active_workspace   $transparent $transparent $white
                urgent_workspace   $darkred     $darkred     $transparent
                binding_mode       $darkred     $darkred     $transparent
        }

}

