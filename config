set $mode_extmonitor External Monitor: Left (J), Right (L), (O) Off
mode "$mode_extmonitor"
{
    bindsym j exec --no-startup-id $HOME/.local/bin/extmonitor e
    bindsym l exec --no-startup-id $HOME/.local/bin/extmonitor d
    bindsym o exec --no-startup-id $HOME/.local/bin/extmonitor o
    bindsym r exec --no-startup-id $HOME/.local/bin/extmonitor r
    # back to normal: Escape
    bindsym Escape mode "default"
}
bindsym $mod2+Shift+m mode "$mode_extmonitor"

